@model MvcMovie.Models.Booking

@{
    ViewData["Title"] = "Let´s book";
}

<h1>Make a booking</h1>

<h3>Are you sure you want to book this?</h3>
<div>
    <form asp-action="Book">
        <input type="hidden" asp-for="ShowId" />
        <div class="form-group">
            <label asp-for="VisitorName" class="control-label">Your Name</label>
            <input asp-for="VisitorName" class="form-control" />
            <span asp-validation-for="VisitorName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VisitorEmail" class="control-label">Your Email</label>
            <input asp-for="VisitorEmail" class="form-control" />
            <span asp-validation-for="VisitorEmail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SeatNr" class="control-label">Seat Number</label>
            <input asp-for="SeatNr" class="form-control" />
            <span asp-validation-for="SeatNr" class="text-danger"></span>
        </div>
        <input type="submit" value="Confirm Booking" class="btn btn-primary" />
    </form>
</div>
